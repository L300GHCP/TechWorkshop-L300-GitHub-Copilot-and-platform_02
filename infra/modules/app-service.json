{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "9946562575618324870"
    }
  },
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "The name of the App Service"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location for the App Service"
      }
    },
    "appServicePlanId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the App Service Plan"
      }
    },
    "acrLoginServer": {
      "type": "string",
      "metadata": {
        "description": "The login server of the Azure Container Registry"
      }
    },
    "containerImageName": {
      "type": "string",
      "defaultValue": "zava-storefront",
      "metadata": {
        "description": "The name of the container image"
      }
    },
    "containerImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "The tag of the container image"
      }
    },
    "appInsightsConnectionString": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The Application Insights connection string"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply to the resource"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "kind": "app,linux,container",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[parameters('appServicePlanId')]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "[format('DOCKER|{0}/{1}:{2}', parameters('acrLoginServer'), parameters('containerImageName'), parameters('containerImageTag'))]",
          "acrUseManagedIdentityCreds": true,
          "alwaysOn": true,
          "minTlsVersion": "1.2",
          "ftpsState": "Disabled",
          "appSettings": [
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[format('https://{0}', parameters('acrLoginServer'))]"
            },
            {
              "name": "WEBSITES_PORT",
              "value": "8080"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[parameters('appInsightsConnectionString')]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "principalId": {
      "type": "string",
      "metadata": {
        "description": "The principal ID of the system-assigned managed identity"
      },
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('name')), '2023-01-01', 'full').identity.principalId]"
    },
    "id": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the App Service"
      },
      "value": "[resourceId('Microsoft.Web/sites', parameters('name'))]"
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "The name of the App Service"
      },
      "value": "[parameters('name')]"
    },
    "defaultHostname": {
      "type": "string",
      "metadata": {
        "description": "The default hostname of the App Service"
      },
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('name')), '2023-01-01').defaultHostName]"
    }
  }
}